      <option value="GO" <% if(dados.uf == "GO") {%> selected <%} %>>Goiás</option>
      <option value="MA" <% if(dados.uf == "MA") {%> selected <%} %>>Maranhão</option>
      <option value="MT" <% if(dados.uf == "MT") {%> selected <%} %>>Mato Grosso</option>
      <option value="MS" <% if(dados.uf == "MS") {%> selected <%} %>>Mato Grosso do Sul</option>
      <option value="MG" <% if(dados.uf == "MG") {%> selected <%} %>>Minas Gerais</option>
      <option value="PA" <% if(dados.uf == "PA") {%> selected <%} %>>Pará</option>
      <option value="PB" <% if(dados.uf == "PB") {%> selected <%} %>>Paraíba</option>
