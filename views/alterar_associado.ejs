      <option value="PI" <% if(dados.uf == "PI") {%> selected <%} %>>Piauí</option>
      <option value="RJ" <% if(dados.uf == "RJ") {%> selected <%} %>>Rio de Janeiro</option>
      <option value="RN" <% if(dados.uf == "RN") {%> selected <%} %>>Rio Grande do Norte</option>
      <option value="RS" <% if(dados.uf == "RS") {%> selected <%} %>>Rio Grande do Sul</option>
      <option value="RO" <% if(dados.uf == "RO") {%> selected <%} %>>Rondônia</option>
      <option value="RR" <% if(dados.uf == "RR") {%> selected <%} %>>Roraima</option>
      <option value="SC" <% if(dados.uf == "SC") {%> selected <%} %>>Santa Catarina</option>
      <option value="SP" <% if(dados.uf == "SP") {%> selected <%} %>>São Paulo</option>
      <option value="SE" <% if(dados.uf == "SE") {%> selected <%} %>>Sergipe</option>
      <option value="TO" <% if(dados.uf == "TO") {%> selected <%} %>>Tocantins</option>
    </select>
    <button type="submit">Submit</button>
  </form>
</body>
</html>